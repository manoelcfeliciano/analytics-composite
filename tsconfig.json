{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"lib": ["es2015"],
	"include": ["./src/**/*.ts", "./src/**/*.d.ts"],
	"exclude": ["node_modules", ".vscode"]
}
